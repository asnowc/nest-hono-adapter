{
  "compilerOptions": {
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "strict": true,
    "lib": ["ES2022"],
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
